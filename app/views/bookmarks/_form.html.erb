<%= simple_form_for(@bookmark, html: {class: "form-inline"}) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :title, class: 'form-control', style: "width:250px;"%>
  </div>
  <div class="form-group">
    <%= f.input :host, class: 'form-control', style: "width:250px;"%>
  </div>
  <div class="form-group">
    <%= f.input :url, class: 'form-control', style: "width:250px;"%>
  </div>
  <div class="form-group">
    <%= f.input :category_id, as: :select, options_for_select(@categories, :id, :name, :id) class: 'form-control', style: "width:250px;"%>
  </div>
  <div class="form-actions">
    <%= f.submit "#{action_name.capitalize} Bookmark"%>
    <%= link_to 'Cancel', bookmarks_path, class: "btn btn-danger btn-min" %>
  </div>
<% end %>